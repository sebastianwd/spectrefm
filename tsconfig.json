{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "es2017", "ESNext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES6",
    "baseUrl": ".",
    "rootDir": "src",
    "paths": {
      "~/*": ["./src/*"],
      "~/generated/*": ["./src/__generated__/*"]
    }
  },
  "exclude": ["node_modules", ".next"],
  "include": [
    "next-env.d.ts",
    "apollo.config.js",
    ".eslintrc.js",
    "src/**/*",
    "interfaces",
    "pages"
  ]
}
